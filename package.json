{
  "name": "@hitechline/react-wizard",
  "version": "2.0.1",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "typings/index.d.ts",
  "scripts": {
    "clean": "rimraf dist typings",
    "prepublishOnly": "yarn build",
    "release": "semantic-release",
    "release:local": "node-env-run --exec \"semantic-release\"",
    "fix": "yarn lint:fix && yarn prettier:fix",
    "lint": "eslint ./ --ext js,jsx,ts,tsx",
    "lint:fix": "eslint ./ --ext js,jsx,ts,tsx --fix",
    "prettier": "prettier --check ./**/*.{js,jsx,ts,tsx}",
    "prettier:fix": "prettier --write ./**/*.{js,jsx,ts,tsx}",
    "build": "yarn build:check && yarn build:types && yarn build:cjs && yarn build:esm",
    "prebuild": "yarn clean",
    "build:check": "tsc --noEmit",
    "build:types": "tsc -p tsconfig.types.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hitechline/react-wizard.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "directories": {
    "lib": "src"
  },
  "files": [
    "dist",
    "typings"
  ],
  "keywords": [
    "react",
    "steps",
    "wizard"
  ],
  "engines": {
    "node": ">=12"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0",
    "react-dom": "^16.8.0 || ^17.0.0"
  },
  "dependencies": {
    "@emotion/react": "^11.1.4",
    "@emotion/styled": "^11.0.0",
    "@hitechline/reactools": "^1.1.2"
  },
  "devDependencies": {
    "@hitechline/eslint-config": "2.0.2",
    "@hitechline/semantic-release-config": "1.2.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.2.3",
    "@semantic-release/npm": "7.1.3",
    "@semantic-release/release-notes-generator": "9.0.3",
    "@types/react": "17.0.13",
    "@types/react-dom": "17.0.8",
    "@typescript-eslint/eslint-plugin": "4.28.1",
    "@typescript-eslint/parser": "4.28.1",
    "eslint": "7.30.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "node-env-run": "4.0.2",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "semantic-release": "17.4.4",
    "typescript": "4.3.5"
  }
}
